<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HGVHours.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label TextColor="Black" Text="{Binding Text}" FontSize="Small"/>
        <Label TextColor="Black" Text="Description:" FontSize="Medium" />
        <Label TextColor="Black" Text="{Binding Description}" FontSize="Small"/>
    </StackLayout>
</ContentPage>